<div class="right-up">
  <div class="room-show">
    <div class="right-up-left">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-up-right">
    <div class="chat-end">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="right-heart">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "right-down"}, local: true do |f| %>
  <div class="send-form">
    <%= f.text_field :content, class: 'message-form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send-button' %>
<% end %>